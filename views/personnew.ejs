<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %> 
<body>
    <%- include('./partials/navigation') %> 
    <br>
    <br>
    <br>
    <!-- <button class="right-align">New</button> -->
    <div class="container">
        <div class="row">
            <div class="col s3"></div>
            <div class="col s5 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">New Person</span>
                        <div class="row">
                            <form class="col s12" action="/personlist" method="POST">
                                <div class="input-field col s12">
                                    <input placeholder="Full Name" id="fullname" name="fullname" type="text" class="validate" required>
                                </div>
                                <div class="input-field col s12">
                                    <input readonly="true" value="" id="nationality" name="nationality" type="text" class="validate">
                                </div>
                                <div class="input-field col s12">
                                    <input placeholder="Birthdate" id="birthdate" name="birthdate" type="text" class="validate" required>
                                </div>
                                <div class="input-field col s6">
                                    <button class="btn" style="background-color:#c2d59c; color: black">SAVE</button>
                                </div>
                            </form>
                        </div>
                        <script>
                            var nat = localStorage.getItem("nationality")
                            document.getElementById("nationality").value = nat
                        </script>
                    </div>
                </div>
            </div>
            <div class="col s3"></div>
        </div>
    </div>

    <%- include('./partials/footer') %> 
</body>

</html>