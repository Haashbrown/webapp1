<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %> 
<body>
    <%- include('./partials/navigation') %> 
    <br>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col s3"></div>
            <div class="col s5 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">View Person</span>
                        <div class="row">
                            <form class="col s12" action="/personlist" method="GET">
                                <div class="input-field col s12">
                                    <input readonly="true" value="<%= person.fullname %> " id="disabled" type="text" class="validate">
                                </div>
                                <div class="input-field col s12">
                                    <input readonly="true" value="<%=  person.nationality %>" id="disabled" type="text" class="validate">
                                </div>
                                <div class="input-field col s12">
                                    <input readonly="true" value="<%=  person.birthdate %>" id="disabled" type="text" class="validate">
                                </div>
                                <div class="input-field col s6">
                                    <button class="btn" style="background-color:white; color: black">EXIT</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s3"></div>
        </div>
    </div>

    <%- include('./partials/footer') %> 
</body>

</html>